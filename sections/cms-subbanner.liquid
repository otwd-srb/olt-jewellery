<style>
.cms-subbanner .subbanner .subbanner-content1 .title {
  color: {{ section.settings.banner1_title_color }};
}
.cms-subbanner .subbanner .subbanner-content1 .desc {
  color: {{ section.settings.banner1_desc_color }};
}
.cms-subbanner .subbanner .subbanner-content1 .btn1 {
  color: {{ section.settings.btn1_txt_color }};
  background-color: {{ section.settings.btn1_bg_color }};
}
.cms-subbanner .subbanner .subbanner-content2 .title {
  color: {{ section.settings.banner2_title_color }};
}
.cms-subbanner .subbanner .subbanner-content2 .desc {
  color: {{ section.settings.banner2_desc_color }};
  background-color: {{ section.settings.banner2_bg_color }};
}
.cms-subbanner .subbanner .subbanner-content2 .btn2 {
  color: {{ section.settings.btn2_txt_color }};
  background-color: {{ section.settings.btn2_bg_color }};
}
.cms-subbanner .subbanner .subbanner-content3 .title {
  color: {{ section.settings.banner3_title_color }};
}
.cms-subbanner .subbanner .subbanner-content3 .desc {
  color: {{ section.settings.banner3_desc_color }};
}
.cms-subbanner .subbanner .subbanner-content3 .btn3 {
  color: {{ section.settings.btn3_txt_color }};
  background-color: {{ section.settings.btn3_bg_color }};
}
</style>    
<div class="container">  
  <div class="row">
    <div class="cms-subbanner hb-animate-element right-to-left">
      <div class="subbanner subbanner1 col-sm-4 col-xs-4">
        {% if section.settings.banner1_img != blank %}
        <a href="{% if section.settings.banner1_url != blank %}{{ section.settings.banner1_url }}{% else %}#{% endif %}">
          <img width="570" height="650" src="{{ section.settings.banner1_img | img_url:"570x650" }}" alt="subbanner1">
          <div class="subbanner-content subbanner-content1 {{ section.settings.text1_position }}">
              {% if section.settings.banner1_title != blank %}<div class="title">{{ section.settings.banner1_title }}</div>{% endif %}
              {% if section.settings.banner1_desc != blank %}<div class="desc">{{ section.settings.banner1_desc }}</div>{% endif %}
              {% if section.settings.banner1_btn != blank %}<div class="btn1 btn">{{ section.settings.banner1_btn }}</div>{% endif %}
          </div>
        </a>
        {% endif %}
      </div>
      <div class="subbanner subbanner2 col-sm-4 col-xs-4">
          {% if section.settings.banner2_img != blank %}
          <a href="{% if section.settings.banner2_url != blank %}{{ section.settings.banner2_url }}{% else %}#{% endif %}">
            <img width="570" height="650" src="{{ section.settings.banner2_img | img_url:"570x650" }}" alt="subbanner2">
            <div class="subbanner-content subbanner-content2 {{ section.settings.text2_position }}">
                {% if section.settings.banner2_title != blank %}<div class="title">{{ section.settings.banner2_title }}</div>{% endif %}
                {% if section.settings.banner2_desc != blank %}<div class="desc">{{ section.settings.banner2_desc }}</div>{% endif %}
              {% if section.settings.banner2_btn != blank %}<div class="btn2 btn">{{ section.settings.banner2_btn }}</div>{% endif %}
            </div>
          </a>
          {% endif %}
      </div>
      <div class="subbanner subbanner3 col-sm-4 col-xs-4">
          {% if section.settings.banner3_img != blank %}
          <a href="{% if section.settings.banner3_url != blank %}{{ section.settings.banner3_url }}{% else %}#{% endif %}">
            <img width="570" height="650" src="{{ section.settings.banner3_img | img_url:"570x650" }}" alt="subbanner3">
            <div class="subbanner-content subbanner-content3 {{ section.settings.text3_position }}">
                {% if section.settings.banner3_desc != blank %}<div class="desc">{{ section.settings.banner3_desc }}</div>{% endif %}
                {% if section.settings.banner3_title != blank %}<div class="title">{{ section.settings.banner3_title }}</div>{% endif %}
              {% if section.settings.banner3_btn != blank %}<div class="btn3 btn">{{ section.settings.banner3_btn }}</div>{% endif %}
            </div>
          </a>
          {% endif %}
      </div>
    </div>
  </div>    
</div>  


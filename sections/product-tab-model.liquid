      "type": "checkbox",
      "id": "product_rows",
      "label": "2 Rows Product"
    },
    {
      "type": "select",
      "id": "product_col",
      "label": "Select product Column",
      "options": [
        {
          "value": "3",
          "label": "3 Column"
        },
        {
          "value": "4",
          "label": "4 Column"
        },
        {
          "value": "5",
          "label": "5 Column"
        }
      ],
        "default": "5"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Trending products",
      "label": "Heading"
    },
    {
      "type": "color",
      "id": "title_clr",
      "label": "Title Color",
      "default": "#111"
    },
    {
      "type": "color",
      "id": "subtitle_clr",
      "label": "Subtitle Color",
      "default": "#666"
    },
    {
      "type": "text",
      "id": "subtitle",
      "default": "Add our new arrivals to your weekly lineup.",
      "label": "Sub Heading"
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Button Bg color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "button_text",
      "label": "Button text color",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "button_hover_bg",
      "label": "Button Background hover color",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "button_hover_text",
      "label": "Button text hover color",
      "default": "#fff"
    }
  ],
  "blocks": [	
  {
    "type": "text_block",
    "name": "Column",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Collection Name",
        "default": "Tab Name"
      },
      {
        "id": "collection",
        "type": "collection",
        "label": "Collection"
      }	
    ]
  }
  ],
  "presets": [
    {
    "name": "Sortable Products",
    "category": "Collection",
    "blocks": [
    {
    "type": "text_block"
    }        
    ]
    }
  ]
}
{% endschema %}